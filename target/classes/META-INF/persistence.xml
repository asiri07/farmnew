<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="acme" transaction-type="RESOURCE_LOCAL">
		<class>com.msd.fixAssetRegister.model.Asset</class>
		<class>com.msd.fixAssetRegister.model.AssetCatergoryDetail</class>
		<class>com.msd.fixAssetRegister.model.AssetCatergoryMain</class>
		<class>com.msd.fixAssetRegister.model.AssetCatergorySub</class>
		<class>com.msd.fixAssetRegister.model.AssetPriorReg</class>
		<class>com.msd.fixAssetRegister.model.CompanyMaster</class>
		<class>com.msd.fixAssetRegister.model.Damage</class>
		<class>com.msd.fixAssetRegister.model.DepartmentMaster</class>
		<class>com.msd.fixAssetRegister.model.Disposal</class>
		<class>com.msd.fixAssetRegister.model.Incometax</class>
		<class>com.msd.fixAssetRegister.model.LocationMaster</class>
		<class>com.msd.fixAssetRegister.model.SectionMaster</class>
		<class>com.msd.fixAssetRegister.model.Transfer</class>
		<class>com.msd.fixAssetRegister.model.User</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.transaction.flush_before_completion"
				value="true" />
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
		</properties>
	</persistence-unit>

</persistence>